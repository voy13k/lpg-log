<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        style="@style/StatsAndTotals.Label"
        android:text="@string/label_avg_lpg_consumption" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textAvgLpgConsumption"
            style="@style/StatsAndTotals.Value"
            android:text="13.3" />

        <TextView
            style="@style/StatsAndTotals.UnitSuffix"
            android:text="@string/hint_consumption" />
    </LinearLayout>

    <TextView
        style="@style/StatsAndTotals.Label"
        android:text="@string/label_avg_ulp_consumption" />

    <LinearLayout
        android:id="@+id/action_change_avg_ulp_consumption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textAvgUlpConsumption"
            style="@style/StatsAndTotals.Value"
            android:text="10.5" />

        <TextView
            style="@style/StatsAndTotals.UnitSuffix"
            android:text="@string/hint_consumption" />

        <TextView style="@style/StatsAndTotals.ChangeAction"/>
    </LinearLayout>

</LinearLayout>